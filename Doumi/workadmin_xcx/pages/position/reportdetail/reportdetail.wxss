/* pages/position/reportdetail/reportdetail.wxss */

map{
  width: 100%; 
  height: 80vh;
}

.bottom-panel{
  height: 20vh;
}

.address{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 7.9vh;
  margin-right: 32rpx;
}

.address image{
  width: 32rpx;
  height: 36rpx;
  margin-left: 32rpx;
  margin-right: 8rpx;
}

.address text{
  color: #999;
  font-size: 28rpx;
}

.line{
  background: #e5e5e5;
  height: 0.1vh;
}

.detail{
  height: 12vh;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.time{
  width: 100rpx;
  color: #6699EE;
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.detail_content{
  flex: 1;
}

.name{
  color: #333;
  font-size: 32rpx;
}

.form_data{
  color: #666666;
  font-size: 28rpx;
  max-width: 300rpx;
}

.detail_image{
  width: 80rpx;
  height: 80rpx;
}

.icon_right{
  width: 16rpx;
  height: 24rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
}