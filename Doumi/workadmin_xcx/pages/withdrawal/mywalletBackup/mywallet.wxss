/* pages/withdrawal/mywallet/mywallet.wxss */

.mywallet {
  width: 100%;
  height: 100vh;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.wallet_banner {
  width: 100%;
  height: 318rpx;
  display: box;
}

.wallet_banner view {
  padding-top: 88rpx;
  width: 750rpx;
  height: 318rpx;
  background: url('http://cdn.doumistatic.com/89,b704caba2de88c.png') no-repeat;
  background-size: 100%;
}

.wallet_banner text {
  display: block;
  text-align: center;
  color: #fff;
}

.wallet_banner .balance_num {
  font-size: 84rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.wallet_banner .note_content {
  background: none;
  width: 180rpx;
  padding-top: 0;
  margin: 0;
  position: absolute;
  right: 14rpx;
  top: 10rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
}

.wallet_banner image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 4rpx;
  /* position: absolute;
  top:50%;
  transform: translateY(-50%); */
}

.wallet_banner .note {
  font-size: 32rpx;
  width: 138rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-left: 8rpx;
}

.wallet_banner .balance_text {
  font-size: 32rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-top: 16rpx;
}

.withdrawal_list {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #f7f7f7;
}

.withdrawal_empty {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}

.withdrawal_empty .empty_text {
  display: block;
  margin: auto;
  font-size: 32rpx;
  color: #bbb;
}

.withdrawal_list scroll-view {
  width: auto;
  height: 760rpx;
}

.withdrawal_list .list_main {
  padding-left: 24rpx;
}

.list_main .list {
  padding: 32rpx 0;
  border-bottom: 1px solid #e5e5e5;
}

.list_main .list:last-child {
  border: none;
}

.list_main .list view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  margin-right: 24rpx;
}

.list_main .list .note_status{
  align-items:baseline;
}

/* item_title_record_type */

.list_main .list text {
  vertical-align: middle;
  /* white-space: nowrap; */
  text-overflow: ellipsis;
  overflow: hidden;
}

.list_main .list .title {
  font-size: 32rpx;
  color: #333;
  height: 44rpx;
  line-height: 44rpx;
}

.list_main .list .time {
  font-size: 24rpx;
  color: #999;
}

.list_main .list .type {
  font-size: 24rpx;
  color: #333;
}

.list_main .list .money {
  font-size: 48rpx;
  color: #333;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}

.list_main .list .note {
  font-size: 24rpx;
  color: #999;
  word-break: break-all;
  word-wrap: break-word;
}

.list_main .list .status {
  font-size: 24rpx;
  color: #999;
  text-align:right;
  width:200rpx;
}

.withdrawal_btn {
  width: 750rpx;
  height: 128rpx;
}

.withdrawal_btn text {
  display: block;
  margin: 20rpx auto;
  width: 710rpx;
  height: 88rpx;
  background-image: linear-gradient(-83deg, #fa0 0%, #fec101 100%);
  border-radius: 8rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
}

.nodata {
  display: block;
  margin-right: 12rpx;
  color: #ccc;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}
