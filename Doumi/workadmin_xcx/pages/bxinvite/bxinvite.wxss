/* pages/bxinvite/bxinvite.wxss */
.page {
     /* overflow: hidden;  */
    min-height: 100%;
    box-sizing: border-box;
    position:absolute;
    width:100%;
    background:rgb(245,245,245);
}
.top-section {
    box-shadow: 0 2px 6px rgb(245, 245, 245);
}
.top-section .banner {
    display: block;
    width: 100%;
    height:160px;
}
.top-section .tip {
    text-align: center;
    padding-bottom: 8px;
    background: -webkit-linear-gradient(rgb(254, 254, 254), rgb(245, 245, 245));
    background: linear-gradient(rgb(254, 254, 254), rgb(245, 245, 245));
}
.realname_tip {
    text-align: center;
    overflow: hidden;
    background-color:rgb(245,245,245);
}
.form-wrap {
    padding: 17px 20px 26px;
    background-color:rgb(245,245,245);
}
.form-wrap .item {
    height: 48px;
    background: #fff;
    border-radius: 3px;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-box;
    margin-bottom: 10px;
    position: relative;
    overflow: hidden;
}
.form-wrap input {
    border: none;
    -ms-flex: 1;
    flex: 1;
    -webkit-box-flex: 1;
    font-size: 14px;
    padding: 12px;
    position: relative;
    background: transparent;
    display: block;
    line-height: 24px;
}
.form-wrap .get-code {
    width: 95px;
    text-align: center;
    line-height: 48px;
    color: #aaa;
    position: relative;
    display: block;
}
.form-wrap .button {
    width: 208px;
    height: 48px;
    line-height: 48px;
    text-align: center;
    display: block;
    margin: 25px auto 0;
    background: rgb(248, 103, 56);
    border: 1px solid rgb(220, 81, 13);
    border-radius: 25px;
    box-shadow: 0 6px 12px rgb(247, 169, 111);
    font-size: 17px;
    color: rgb(255, 240, 222);
}
.top-section .tip .p1 {
    font-size: 16px;
    line-height: 22px;
    color: rgb(68, 68, 68);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.top-section .tip .p2 {
    font-size: 12px;
    line-height: 21px;
    color: rgb(153, 153, 153);
    margin-top: 3px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.text_tip {
    position: relative;
    display: inline-block;
    font-size: 14px;
    line-height: 21px;
    color: rgb(153, 153, 153);
    margin-top: 8px;
    width: 215px;
}
/* 保险过期领取失败 */
.popup_fail {
    position:absolute;
    width:100%;
    text-align:center;
    background:#f2f2f2;
    min-height:100%;
}
.popup_fail .icon_tip {
    display: block;
    width: 130px;
    height:130px;
    margin:40% auto 40px;
}
.popup_fail .tip_1 {
    font-size: 16px;
    line-height: 22px;
}
.popup_fail .tip_2 {
    line-height: 20px;
    color: rgb(187, 187, 187);
    margin-top: 8px;
}
/* 已激活用户领取成功 */
.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.75);
}
.popup-insurance {
    position: absolute;
    width: 250px;
    left: 50%;
    top: 50%;
    border-radius: 12px;
    overflow: hidden;
    -webkit-transform: translate3d(-50%, -50%, 0);
    transform: translate3d(-50%, -50%, 0);
}
.popup-insurance .top {
    position: relative;
}
.popup-insurance image {
    display: block;
    width: 100%;
    height: 206px;
}
.popup-insurance .link {
    position: absolute;
    width: 100%;
    left: 0;
    top: 44px;
    font-size: 12px;
    text-align: center;
    color: rgb(126, 131, 139);
    display: inline-block;
}
.popup-insurance .content {
    background: rgb(220, 90, 81);
    padding: 20px;
    color: rgb(255, 218, 174);
    text-align: center;
}
.popup-insurance .tip_1 {
    font-size: 20px;
    line-height: 28px;
    margin-bottom: 2px;
}
.popup-insurance .tip_2 {
    line-height: 20px;
}
.popup-insurance .button {
    display: block;
    background: rgb(255, 209, 153);
    padding: 3px;
    border-radius: 22px;
    font-size: 17px;
    color: rgb(207, 81, 72);
    margin-top: 18px;
    box-shadow: 0 3px 2px rgb(199, 86, 78);
}
.popup-insurance .button text {
    display: block;
    height: 36px;
    line-height: 36px;
    text-align: center;
    border: 1px solid rgba(181, 69, 61, 0.5);
    border-radius: 18px;
}
/* 未激活用户领取成功 */
.popup_success {
    position: absolute;
    width: 281px;
    height: 426px;
    background-size: cover;
    left: 50%;
    top: 50%;
    margin: -213px 0 0 -140px;
    border-radius: 12px;
    padding-top: 136px;
    box-sizing: border-box;
    z-index: 0;
}
.bg_insurance {
    position: absolute;
    width: 281px;
    height: 426px;
    background-size: cover;
    left: 50%;
    top: 50%;
    margin: -213px 0 0 -140px;
    border-radius: 12px;
    z-index: -1;
}
.popup_success .tip {
    text-align: center;
    line-height: 18px;
    margin-bottom: 15px;
    z-index: 9;
}
.popup_success .qrcode {
    width: 238px;
    height: 238px;
    padding: 16px;
    box-sizing: border-box;
    background: rgba(255, 255, 255, 0.53);
    position: relative;
    border-radius: 4px;
    margin: 0 auto;
    z-index: 9;
}
.popup_success .qrcode::before {
    content: "";
    position: absolute;
    width: 200%;
    height: 200%;
    border: 1px solid rgb(235, 235, 235);
    border-radius: 8px;
    box-sizing: border-box;
    left: 0;
    top: 0;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
}
.popup_success .qrcode image {
    display: block;
    width: 100%;
    height:100%;
    position: relative;
    z-index: 0;
}
z_index {
  z-index: -1;
}
.isdisabled{
    color: #cfcfcf;
}
.realname_tip .text_tip::before {
    content: '';
    position: absolute;
    top: 50%;
    width: 1000px;
    height: 1px;
    left: 100%;
    background-color: rgba(232,232,232,0.99);
}
.realname_tip .text_tip::after {
    content: '';
    position: absolute;
    top: 50%;
    right: 100%;
    width: 1000px;
    height: 1px;
    background-color: rgba(232,232,232,0.99);
}