.page {
  font-family: "Helvetica Neue", "Microsoft Yahei", sans-serif;	
	font-size: 16px;
	background: #f2f2f2;
	color: #333;
  height: 100%;
  overflow: hidden;
	min-height: 100%;
	box-sizing: border-box;  
  position:absolute;
  width:100%;
}
.user-head {
  background:#fff;  
  height:70px;
  position: relative;
  /* display:-webkit-flex;  */
  display:flex;
  width:100%;
  /* justify-content:center;
  align-content:center; */
  margin-top: 12px;
  border-top: #e5e5e5 solid 1rpx;
}
.user-img{
  width:50px;
  height: 50px;
  border-radius: 50px;
  vertical-align: middle; 
  position: absolute;
  right: 26px;
  top: 10px;
}
.user-text{
  font-family: 微软雅黑;
  color:#333333;
  display: inline-block;
  font-size: 16px;
  line-height: 70px;
  margin-left: 12px;
}
.name-text{
  padding-top:6rpx;
  color:#999;
font-size:14px;
flex-grow:1;
text-align:right;

}
.jump {
  color: #999999;
  float: right;
  font-size: 14px;
  margin-left: 24rpx;
}
.jump::after{
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
          transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 45%;
  right: 13px;
}

.list {
  background: #fff; 
  margin-top:0px;
  height:48px;
  border-bottom: #e5e5e5 solid 1rpx;
}
.list .item{
  padding:13px;
  font-size: 16px;
  color:#333; 
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.text_introduce {
  color: #1F2D3D;
  height: 22px;
  line-height: 22px;
  margin-top:2px;
}
.list .item image {
  width:17px;
  height: 17px;
  display: inline-block;
  vertical-align:middle;
}
.user-head::after{
  position: absolute;
  bottom: 0;
  left:24rpx;
  content: ' ';
  display: block;
  background: #e5e5e5;
  width: 100%;
  height: 1px;

}