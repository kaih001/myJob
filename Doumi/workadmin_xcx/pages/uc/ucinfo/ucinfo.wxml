<view class='page'>
    <view class="user-head" bindtap = "changeImage">            
        <text class="user-text">头像</text>       
        <image class="user-img" src="{{logo_thumb_url}}" wx:if="{{logo_thumb_url}}"/>
        <image class="user-img" src="http://sta.doumistatic.com/src/image/saas/avatar.png" wx:else/>
        <text class="jump"></text>
    </view> 
    <view class="list">
        <view class="item" bindtap="changeName">
            <text class='text_introduce'>姓名</text>
            <text class="name-text" >{{name}}</text> 
            <text class="jump"  wx:if="{{real_name_auth === 'false'}}"  ></text> 
        </view>
    </view>
</view>