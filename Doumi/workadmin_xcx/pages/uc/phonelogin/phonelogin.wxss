/* pages/login/login.wxss */

page {
    background: #F3F9FE;
    position: absolute;
    top: 0;
    bottom: 0;
}

.login {

    display: block;
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.header {
    width: 100%;
    /*background: greenyellow;*/
}

.header image {
    height: 100px;
    width: 100px;
    display: block;
    margin: auto;
    padding-top: 45px;
}

.title {
    line-height: 65px;
	font-size: 23px;
	color: #64b5f6;
}

.info {
    padding: 0 60rpx;
    font-size: 13px;
	color: rgba(0, 0, 0, 0.27);
}

.button {
    margin: 60rpx auto 30rpx auto; 
    width: 327px;
    height: 44px;
    background-color:#FFAA00;
    border:none;
    
}

.btn {
    background-color: #1976d2;
    color: #ffffff;
}

.btn-hover {
    background-color: #1976d2;
    opacity: 0.7;
}
