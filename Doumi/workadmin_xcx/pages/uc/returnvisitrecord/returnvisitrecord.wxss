.record-top {
  background-color: #ffffff;
  padding: 40rpx;
}

.head-title {
  margin-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  font-family: PingFangSC-Medium;
  color: #333333;
}

.tip-list {
  margin-bottom: 40rpx;
}


.tip-list .tip-item {
  display: flex;
  height: 84rpx;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}

.tip-list .tip-item .tip-title {
  margin-right: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #FFAA00;
}

.tip-list .tip-item .radio-group {
  display: flex;
  align-items: center;
}

.tip-list .tip-item .radio-group .radio-label {
  display: flex;
  align-items: center;
}

.tip-list .tip-item .radio-group .radio-label .radio-txt {
  margin-right: 80rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #404040;
}

radio {
  display: flex;
  justify-content: center;
  align-items: center;
}

radio .wx-radio-input {
  margin-right: 20rpx;
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  border: 1px solid #FFAA00;
}

radio .wx-radio-input.wx-radio-input-checked {
  border-color: #FFAA00 !important;
  background: #FFAA00 !important;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.textarea-pr {
  position: relative;
  display: flex;
  width: 100%;
}

.textarea-main {
  height: 144rpx;
  background: #ffffff;
  font-size: 28rpx;
  border-radius: 2rpx;
  border: 1rpx solid #e5e5e5;
  padding: 12rpx 12rpx;
  display: inline-block;
  flex-grow: 1;
}

.text-length {
  position: absolute;
  bottom: 0;
  right: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #BBBBBB;
}

.gap-line {
  height: 20rpx;
  background-color: #f2f2f2;
}

.record-bottom {
  background-color: #ffffff;
  padding: 40rpx;
  margin-bottom: 128rpx;
}

.color-line {
  height: 4rpx;
  width: 60rpx;
  margin-bottom: 20rpx;
  background-color: #FFAA00;
}

.record-list .record-item {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #e5e5e5;
}

.record-list .record-item .title {
  display: flex;
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #333333;
  font-family: PingFangSC-Semibold;
  margin-bottom: 10rpx;
}

.record-list .record-item .title .tag {
  margin-left: 15rpx;
  position: relative;
}

.record-list .record-item .title .tag:not(:last-child):after {
  content: "|";
  position: absolute;
  top: 0;
  right: -10rpx;
  height: 18rpx;
  padding-right: 0px;
  color: #CCCCCC;
}

.record-list .record-item .content {
  color: #666666;
  margin-bottom: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
}

.footer {
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  width: 100%;
  border-top: 1px solid #e6e6e6;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer .btn {
  width: 710rpx;
  height: 88rpx;
  background-color: #FFAA00;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
}

.footer .disabled {
  background-color: #e3e3e3;
}