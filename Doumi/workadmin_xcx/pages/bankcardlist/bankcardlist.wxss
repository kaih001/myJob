/* pages/bankcardlist/bankcardlist.wxss */
.cardlist{
  width: 100%;
}
.card-main{
  width: 686rpx;
  margin: 32rpx auto;
}
.card-item{
  position: relative;
  width: 100%;
  height: 176rpx;
  border-radius: 4px;
}
.item-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 176rpx;
  transform: scaleX(-1);
  background-image: linear-gradient(136deg, #FFCC6A 0%, #FFA856 57%, #FF9558 100%);
  border: 1px solid #FFA470;
  border-radius: 4px;
  z-index: 8;
}
.item-main{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 176rpx;
}
.item-main .content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
}
.item-main .icon{
  width: 72rpx;
  height: 72rpx;
  display: block;
  flex-shrink:0;
  flex-grow: 0;
  margin-left: 32rpx;
}
.band-info{
  margin-left: 32rpx;
  flex-grow: 2;
  flex-shrink:1;
  overflow: hidden;
}
.bank-title{
  display: block;
  font-size: 40rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 52rpx;
  margin-bottom: 24rpx;
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis;
}
.bank-number{
  display: block;
  color: #fff;
  font-size: 24rpx;  
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis;
}
.unlock{
  flex-grow: 0;
  background: #FFFFFF;
  border: 2rpx solid #FFFFFF;
  border-radius: 2px;
  width: 84rpx;
  height: 44rpx;
  text-align: center;
  align-items: center;
  white-space:nowrap;
  flex-shrink:0;
  margin-right: 32rpx;
  margin-left: 20rpx;
}
.unlock text{
  display: block;
  color: #fff;
  font-size: 24rpx;
  color: #FF9957;
  line-height: 44rpx;
  height: 44rpx;
}