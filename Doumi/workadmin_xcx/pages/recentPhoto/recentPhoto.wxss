page{
  height: 100%;
}
.page-warp{
  min-height: 100%;
  background: #ffffff;
}
.title{
  width: 100%;
  height: 184rpx;
  box-sizing: border-box;
  background: url(https://cdn.doumistatic.com/237,021810ab47563543.png) no-repeat;
  background-size: cover;
  padding: 40rpx 0 0 32rpx;
  font-size: 48rpx;
  color: #fff;
}
.section{
  width: 670rpx;
  /* min-height: 670rpx; */
  margin: 80rpx auto 0;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0 0 28rpx 8rpx rgba(21,118,252,0.2);
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  padding-bottom: 80rpx;
}
.img-default{
  width: 388rpx;
  height: 426rpx;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.3);
  border-radius: 2px;
	background-color: #ffffff;
	box-sizing: border-box;
  padding: 10rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img-default-img{
  display: block;
  max-width: 100%;
  max-height: 100%;
}
.upload-btn{
  width: 584rpx;
  height: 170rpx;
  margin-top: 40rpx;
}
.upload-btn-img{
  max-width: 100%;
  max-height: 100%;
}