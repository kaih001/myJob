
page{
  background-color: #FFE7B4;
}
.we{
  width:100%;
  height:100vh;
  background: url('https://cdn.doumistatic.com/234,020c5a55afa43a2d.png') no-repeat center top;
  background-size: 100% auto;
  display: flex;
  flex-direction: column;
}
.gift{
  margin-top:300rpx;
  display: flex;
  justify-content: center;
}
.gift image{
  width:506rpx;
  height:320rpx;
}
/* .top{
  margin-top:580rpx !important;
} */
.info{
  margin-top:60rpx;
  display:flex;
  padding:0 76rpx 0 80rpx;
}
.info .left .avatar{
  display: flex;
  align-items: center;
}
.info .left image{
  width:140rpx;
  height:140rpx;
}
.info .right{
  margin-left:24rpx;
  display:flex;
  flex-direction: column;
  height:140rpx;
}
.info .right .title{
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #CD5708;
}
.info .right .content{
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #CD5708;
}
.btn-container{
  margin-top:60rpx;
  display:flex;
  justify-content: center;
}
.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold;
  color: #FFEBC3;
  width:528rpx;
  height:84rpx;
  background-image: linear-gradient(180deg, #FF7F7F 0%, #FD4A4A 100%);
  box-shadow: 0 4px 8px 0 rgba(233,55,55,0.60);
  border-radius: 21px;
}
.tips{
  padding-bottom:60rpx;
  margin-top:80rpx;
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #CD5708;
  line-height: 32rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.line{
  text-align: center;
  width:400rpx;
}
