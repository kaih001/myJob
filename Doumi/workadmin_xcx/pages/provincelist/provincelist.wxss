/**index.wxss**/

.page {
  font-family: "Helvetica Neue", "Microsoft Yahei", sans-serif;	
	font-size: 14px;
	background: #f2f2f2;
	color: #333;
  height: 100%;
   overflow: hidden;
	min-height: 100%;
	box-sizing: border-box;  
}
.list {
  background: #fff; 
  /* margin-top:13px; */
}
.list .item{
  padding:13px;
  font-size: 16px;
  color:#333; 
  position: relative;
  border-bottom: 1px solid #f3f3f3;
}
.list .item::last-child{
  border:none;
}
.text_introduce {
  color: #1F2D3D;
  margin-left: 10px;
  height: 22px;
  line-height: 22px;
}
.jump {
  color: #999999;
  float: right;
  font-size: 14px;
}
.jump::after{
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 45%;
  right: 13px;
}
