<view class="certificate-info">
  <view class="title">身份信息</view>
  <view class="name">
    <view class="head">姓名</view>
    <view class="tig">*</view>
    <input class="input" type="text" disabled='{{true}}' value="{{name}}" placeholder="请填写姓名" placeholder-class="placeholder" bindinput="bindInputName" />
  </view>
  <view class="card-number">
    <view class="head">身份证</view>
    <view class="tig">*</view>
    <input class="input" type="idcard" disabled='{{true}}' value="{{idCard}}" placeholder="请填写身份证号码" placeholder-class="placeholder" bindinput="bindInputIdCard" />
  </view>
</view>