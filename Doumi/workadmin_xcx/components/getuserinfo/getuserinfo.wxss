.getphone-mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 9999999;
}
.mask-bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 98;
  opacity: 0.5;
  background: #000000;
}
.mask-text{
  text-align: center;
  display: block;
  margin: 60rpx 0;
}
.mask-main{
  position: absolute;
  top: 368rpx;
  left: 94rpx;
  bottom: 0;
  z-index: 99;
  width: 560rpx;
  height: 318rpx;
  background: #fff;
  border-radius: 4px;

}
.close{
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  display: block;
  font-size: 30px;
  color: #bbb;
}