<view class="user-info">
  <view class="avatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="info">
    <view class="name">
      <view wx:if="{{userInfo.name}}">{{userInfo.name}}</view>
      <open-data wx:else type="userNickName"></open-data>
    </view>
    <view class="mobile">{{userInfo.mobile}}</view>
  </view>
</view>