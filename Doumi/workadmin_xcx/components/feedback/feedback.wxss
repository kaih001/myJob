.getphone-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 9999999;
}

.mask-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 98;
  opacity: 0.5;
  background: #000;
}

.mask-text {
  text-align: center;
  display: block;
  margin: 60rpx 0;
}

.mask-main {
  position: absolute;
  bottom: 0;
  z-index: 99;
  height: 662rpx;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.close {
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  display: block;
  font-size: 30px;
  color: #bbb;
}

.title {
  height: 96rpx;
  border-bottom: #e5e5e5 1rpx solid;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title text {
  color: #333;
  font-size: 32rpx;
  margin-left: 300rpx;
}

.title image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 24rpx;
}

.label-1 {
  margin-top: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.check-group {
  margin:32rpx 40rpx 40rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.check-group-text-select {
  height: 60rpx;
  width: 318rpx;
  border: #f5974e solid 1rpx;
  background: rgba(245, 151, 78, 0.05);
  border-radius: 2rpx;
  font-size: 28rpx;
  color: #f5974e;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-group-text-normal{
  height: 60rpx;
  width: 318rpx;
  background: #FFFFFF;
  border: 1rpx solid #E5E5E5;
  border-radius: 2rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}
.textarea-pr{
  display: flex;
  width: 100%;
}
.textarea-main {
  height: 144rpx;
  background: #ffffff;
  font-size: 28rpx;
  border-radius: 2rpx;
  border: 1rpx solid #e5e5e5;
  padding: 12rpx 12rpx;
  display: inline-block;
  flex-grow: 1;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.commit-feedback{
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 88rpx;
  border-radius: 4rpx;
  background: #fa0;
  color: #fff;
  font-size: 34rpx;
}

.text-length{
  position: absolute;
  bottom: 180rpx;
  right: 60rpx;
  color: #bbb;
  font-size: 28rpx;
}