.prefecture-box {
  box-sizing: border-box;
  min-height: 100%;
}

.dm-icon-danbao {
  width: 56px;
  height: 16px;
}

.dm-icon-danbao::after {
  width: 56px;
  height: 16px;
  background-position: 0 0;
}

.dm-icon-huobao {
  width: 70px;
  height: 18px;
}

.dm-icon-huobao::after {
  width: 70px;
  height: 18px;
  background-position: 0 -20px;
}

.dm-icon-location-sm,
.dm-icon-clock-sm,
.dm-icon-arrow-sm {
  width: 10px;
  height: 10px;
}

.dm-icon-location-sm::after,
.dm-icon-clock-sm::after,
.dm-icon-arrow-sm::after {
  width: 10px;
  height: 10px;
  background-position: -60px 0;
}

.dm-icon-clock-sm::after {
  background-position: -70px 0;
}

.dm-icon-arrow-sm::after {
  background-position: -80px 0;
}

.dm-tag {
  display: inline-block;
  position: relative;
  width: 39px;
  height: 16px;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
}

.dm-tag::after {
  content: "";
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  box-sizing: border-box;
  background-color: transparent;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 2px;
  font-size: 0;
  line-height: 0;
  text-align: center;
  padding: 5px 7px;
  transform-origin: 0 0;
  transform: scale(0.5);
}

.dm-tag-text {
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 2px;
  color: #808080;
  font-size: 20px;
  line-height: 20px;
  white-space: nowrap;
  padding: 5px 7px;
  transform-origin: 0 0;
  transform: scale(0.5);
  margin-right: -50%;
  margin-bottom: -50%;
}

.recommend {
  background-color: #fff;
}

.recommend .dm-pannel-hd {
  display: none;
}

.recommend .dm-list-item {
  position: relative;
}

.recommend .dm-list-item::after {
  content: "";
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1px;
  background-color: #e5e5e5;
  transform-origin: 0 100%;
  transform: scale3d(1, 0.5, 1);
}

.recommend .dm-product-box {
  position: relative;
  padding: 12px 16px;
}

.recommend .dm-product-box.dm-touch {
  background-color: #f5f5f5;
}

.recommend .dm-product-content {
  display: flex;
}

.recommend .dm-product-title {
  flex: 1;
  font-size: 16px;
  font-weight: 700;
  line-height: 24px;
  margin-right: 8px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.recommend .dm-product-price {
  color: #f60;
  font-size: 16px;
  line-height: 24px;
  white-space: nowrap;
  overflow: hidden;
}

.recommend .dm-product-price-value {
  font-size: 18px;
  font-weight: 600;
  margin-right: 4px;
}

.recommend .dm-product-info {
  margin-top: 4px;
  overflow: hidden;
}

.recommend .dm-product-meta {
  float: left;
  color: #808080;
  font-size: 12px;
  line-height: 20px;
  margin-right: 12px;
}

.recommend .dm-product-meta .dm-icon {
  float: left;
  margin: 5px 4px 5px -1px;
}

.recommend .dm-product-label {
  padding-top: 4px;
  padding-bottom: 4px;
  margin-top: 4px;
  overflow: hidden;
}

.recommend .dm-product-label .dm-icon-danbao {
  float: left;
  margin-right: 8px;
}

.recommend .dm-product-label .dm-tag {
  float: left;
}

.recommend .dm-product-location {
  position: absolute;
  bottom: 16px;
  right: 20px;
  display: flex;
  align-items: center;
  height: 36px;
  background-color: rgba(229, 229, 229, 0.3);
  border-radius: 2px;
  color: #808080;
  font-size: 20px;
  line-height: 36px;
  text-align: center;
  padding-right: 8px;
  padding-left: 8px;
  transform-origin: 100% 100%;
  transform: scale(0.5);
}

.recommend .dm-product-location .dm-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.recommend .dm-product-location .dm-icon::after {
  width: 20px;
  height: 20px;
  background-position: -160px 0;
  background-size: 200px auto;
}

.recommend .dm-product-location text {
  margin-right: 16px;
}

.recommend .dm-product-location .dm-text-link {
  margin-right: 0;
}

.dm-banner-img {
  display: block;
  width: 100%;
}

.dm-tag-icon {
  margin-right: 8px;
  width: 49px;
}

.dm-tag-danbao .dm-tag-text {
  color: #4ab300;
  border: 1px solid #4ab300;
}

.dm-tag-mingqi .dm-tag-text {
  color: #60a0ff;
  border: 1px solid #60a0ff;
}

.dm-tag-haowan .dm-tag-text {
  color: #ff6a6a;
  border: 1px solid #ff6a6a;
}
