/* 填写求职意向 - start */

.mod-data-box {
  margin: 24rpx auto;
  padding: 46px 12px 16px 12px;
  background: url(https://cdn.doumistatic.com/147,013ca6952a328535.png) no-repeat;
  background-size: 100% auto;
}

.mod-data-box .mod-input {
  position: relative;
  display: flex;
  font-size: 14px;
  color: #404040;
  line-height: 14px;
  background-color: #fff;
}

.mod-data-box .mod-input:first-child::after {
  position: absolute;
  left: 16px;
  bottom: 0;
  width: calc(100% - 16px);
  height: 1px;
  content: '';
  background-color: #e5e5e5;
  transform: scale3d(1, 0.5, 1);
}

.mod-data-box .mod-input view {
  position: relative;
  padding: 16px;
}

.mod-data-box .mod-input .text {
  flex: 1;
  text-align: left;
}

.mod-data-box .mod-input .text.placeholder {
  color: #999;
}

.mod-data-box .mod-input .text::before,
.mod-data-box .mod-input .text::after {
  content: '';
  position: absolute;
  top: 19px;
  right: 16px;
  width: 10px;
  height: 0.05rem;
  background-color: #999;
  transform-origin: center center;
}

.mod-data-box .mod-input .text::before {
  top: 26px;
  transform: translateX(-50%) rotate(-45deg);
}

.mod-data-box .mod-input .text::after {
  transform: translateX(-50%) rotate(45deg);
}

