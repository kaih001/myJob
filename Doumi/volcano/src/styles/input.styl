::-webkit-input-placeholder
  color #999

.dm-input
  display block
  box-sizing border-box
  width 100%
  height 44px
  border 0 none
  color #404040
  font-size 14px
  line-height 44px
  word-break break-all
  word-wrap break-word

input
  &.dm-input
    background-color transparent
    line-height normal
    white-space nowrap
