/* components/myRewardRules/myRewardRules.wxss */
.rewardRules {
  position: fixed;
  z-index: 8888;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  opacity: 0.96;
  background: #fff;
  box-sizing: border-box;
}

.rewardRules .title {
  height: 132rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #404040;
  line-height: 36rpx;
  font-weight: bold;
}

.rewardRules .content {
  z-index: 8888;
  position: fixed;
  top: 132rpx;
  bottom: 88rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  overflow: auto;
}

.rewardRules .content .text {
  margin-bottom: 40rpx;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  color: #404040;
  line-height: 40rpx;
  box-sizing: border-box;
}

.rewardRules .btn {
  position: fixed;
  z-index: 8888;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-top: 1rpx solid #e5e5e5;
}

.rewardRules .btn image {
  width: 48rpx;
  height: 48rpx;
}
