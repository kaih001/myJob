.short-line {
  width: 27px;
  height: 3px;
  background: #f7f7f7;
  margin-left: 16px;
}

.dm-recommend-list-wrapper {
  background-color: #fff;
  margin-top: 24rpx;
  text-align: left;
}
.hasSubscribe{
  padding-bottom:90px;
}
.dm-recommend-list-header {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 16px 16px 12px;
}

.dm-recommend-list-header .dm-recommend-list-header-text {
  color: #404040;
  font-size: 18px;
  line-height: 26px;
  font-weight: 700;
}

.dm-recommend-list-header .show-all {
  font-size: 12px;
  line-height: 20px;
  height: 20px;
  vertical-align: middle;
}

.dm-recommend-list-item {
  position: relative;
  height: 100%;
  padding: 12px 16px 17px;
}

.dm-recommend-list-item::after {
  content: '';
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1px;
  background-color: #e5e5e5;
  transform-origin: 0 100%;
  transform: scale3d(1, 0.5, 1);
}

.dm-product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: left;
}

.dm-product-title {
  height: 24px;
  font-size: 16px;
  color: #404040;
  line-height: 24px;
  font-family: 'PingFangSC';
  font-weight: 700;
  text-overflow: ellipsis;
  overflow: hidden;
  flex: 1;
  white-space: nowrap;
}

.dm-product-price {
  font-size: 16px;
  height: 26px;
  color: #f80;
  font-family: 'PingFangSC';
}

.dm-product-price .dm-product-price-value {
  font-size: 18px;
  line-height: 26px;
  height: 26px;
  color: #f80;
  font-family: 'HelveticaNeue';
  font-weight: 600;
}

.dm-product-price .dm-product-price-unit {
  font-size: 16px;
  line-height: 26px;
  height: 26px;
  color: #f80;
  font-family: 'PingFangSC';
  margin-left: 2px;
}

.dm-product-company {
  margin-top: 8px;
  margin-bottom: 16px;
  font-size: 12px;
  color: #808080;
  line-height: 12px;
}

.dm-product-label {
  margin-top: 8px;
  position: relative;
  font-size: 10px;
  height: 16px;
}

.dm-product-label .dm-tag {
  margin-left: 12px;
  width: 28px;
  height: 16px;
  display: inline-block;
}

.dm-product-label .dm-tag:first-child {
  margin-left: 0;
}

.dm-icon {
  display: inline-block;
  position: relative;
  width: 20px;
  height: 20px;
  vertical-align: middle;
  font-size: 0;
  line-height: 0;
  overflow: hidden;
}

.dm-icon::after {
  content: '';
  display: block;
  width: 20px;
  height: 20px;
  background: url(https://cdn.doumistatic.com/115,e2866ad9cf8bd6.png) no-repeat;
  background-size: 100px auto;
}

.dm-icon-guarantee {
  width: 41px;
  height: 16px;
}

.dm-wrapper-guarantee {
  position: relative;
  top: -12px;
  display: inline-block;
}

.dm-icon-guarantee::after {
  width: 41px;
  height: 16px;
  background-position: 0 0;
}

.dm-icon-rightarrow {
  width: 6px;
  height: 13px;
  margin-left: 7px;
}

.dm-icon-rightarrow::after {
  width: 6px;
  height: 13px;
  background-position: 0 -125px;
}

.dm-icon-zhipin {
  position: absolute;
  bottom: 0;
  right: 2px;
  display: flex;
  align-items: center;
  height: 32px;
  border: 1px solid #FF7F0F;
  border-radius: 2px;
  color: #FF7F0F;
  font-size: 20px;
  line-height: 34px;
  text-align: center;
  padding-right: 8px;
  padding-left: 8px;
  transform-origin: 100% 100%;
  transform: scale(0.5);
  box-sizing: border-box;
}

.dm-tag-text {
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 2px;
  color: #808080;
  font-size: 20px;
  line-height: 20px;
  white-space: nowrap;
  padding: 5px 7px;
  transform-origin: 0 0;
  transform: scale(0.5);
  margin-right: -50%;
  margin-bottom: -50%;
}
