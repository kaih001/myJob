/* components/getPhoneNumber/getPhoneNumber.wxss */

.getPN {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}

.getPN .getPNC {
  position: fixed;
  width: 532rpx;
  height: 372rpx;
  background: #fff;
  border-radius: 20px;
  z-index: 2000;
  padding: 48rpx 32.25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.getPN .getPNC text {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #404040;
  line-height: 50rpx;
  text-align: center;
}

.getPN .getPNC button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fc0;
  border: none;
  border-radius: 8rpx;
  color: #fff;
  font-size: 32rpx;
}

.getPN .getPNC .gp-touch {
  opacity: 0.5;
}
