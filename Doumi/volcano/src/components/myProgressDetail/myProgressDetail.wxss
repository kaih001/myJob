/* components/myProgressDetail/myProgressDetail.wxss */
.dm-icon {
  display: inline-block;
  position: relative;
  width: 20px;
  height: 20px;
  vertical-align: middle;
  font-size: 0;
  line-height: 0;
  overflow: hidden;
}

.dm-icon::after {
  content: "";
  display: block;
  width: 20px;
  height: 20px;
  background: url("https://cdn.doumistatic.com/170,015f30ef884724fe.png") no-repeat;
  background-size: 100px auto;
}

.dm-icon-danbao {
  width: 41px;
  height: 16px;
}

.dm-icon-danbao::after {
  width: 41px;
  height: 16px;
  background-position: 0 0;
}

.dm-icon-huobao {
  width: 70px;
  height: 18px;
}

.dm-icon-huobao::after {
  width: 70px;
  height: 18px;
  background-position: 0 -20px;
}

.dm-icon-location-sm,
.dm-icon-clock-sm,
.dm-icon-arrow-sm {
  width: 10px;
  height: 10px;
}

.dm-icon-location-sm::after,
.dm-icon-clock-sm::after,
.dm-icon-arrow-sm::after {
  width: 10px;
  height: 10px;
  background-position: -60px 0;
}

.dm-icon-clock-sm::after {
  background-position: -70px 0;
}

.dm-icon-arrow-sm::after {
  background-position: -80px 0;
}

.dm-tag {
  display: inline-block;
  position: relative;
  width: 39px;
  height: 16px;
  text-align: center;
  white-space: nowrap;
}

.dm-tag::after {
  content: "";
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  box-sizing: border-box;
  background-color: transparent;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 2px;
  font-size: 0;
  line-height: 0;
  text-align: center;
  padding: 5px 7px;
  transform-origin: 0 0;
  transform: scale(0.5);
}

.dm-tag-text {
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 2px;
  color: #808080;
  font-size: 20px;
  line-height: 20px;
  white-space: nowrap;
  padding: 5px 7px;
  transform-origin: 0 0;
  transform: scale(0.5);
  margin-right: -50%;
  margin-bottom: -50%;
}

.dm-detail-box {
  background-color: #fff;
}

.dm-product-box {
  position: relative;
  background-color: #fff;
  padding: 24rpx 32rpx;
}

.dm-product-box.dm-touch {
  background-color: #f5f5f5;
}

.dm-product-title {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 48rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 140rpx;
  overflow: hidden;
}

.dm-product-price {
  display: flex;
  align-items: center;
  flex: none;
  color: #f60;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-right: 16rpx;
}

.dm-product-price-value {
  color: #f60;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 52rpx;
  margin-right: 4px;
}

.dm-product-box > .dm-product-info-first {
  align-items: flex-start;
}

.dm-product-box > .dm-product-info-first .city {
  white-space: nowrap;
}

.dm-product-box > .dm-product-info-first .company {
  text-align: justify;
}

.dm-product-info {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  overflow: hidden;
}

.dm-product-meta {
  float: left;
  color: #808080;
  font-size: 12px;
  line-height: 20px;
  margin-right: 12px;
}

.dm-product-meta .dm-icon {
  float: left;
  margin: 5px 4px 5px -1px;
}

.dm-product-label {
  display: block;
  flex: none;
}

.dm-product-label .dm-icon-danbao {
  display: none;
  float: left;
  margin-right: 8px;
}

.dm-product-label .dm-tag {
  float: left;
}

.dm-product-status {
  position: absolute;
  right: 32rpx;
  top: 28rpx;
  color: #404040;
  font-size: 28rpx;
  line-height: 44rpx;
}

.dm-product-status-cancle {
  color: #999;
}

.dm-product-status-over {
  color: #999;
}

.dm-product-status-reject {
  color: #f60;
}

.dm-product-opt {
  display: flex;
  position: relative;
}

.dm-product-opt::after {
  content: "";
  position: absolute;
  top: 0;
  right: 40rpx;
  left: 40rpx;
  height: 1px;
  border-top: 1px dotted #e5e5e5;
  transform-origin: 0 0;
  transform: scale3d(1, 0.5, 1);
}

/* product-address */

.product-address {
  padding: 0 32rpx;
}

.product-address .dm-product-box {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-sizing: border-box;
  min-height: 260rpx;
  padding: 24rpx 64rpx;
  background-color: #fff;
}

.product-address .dm-product-image {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: 0;
}

.product-address .dm-product-image image {
  width: 100%;
  max-width: 100%;
  height: 100%;
  max-height: 100%;
  border-radius: 0;
}

.product-address .dm-product-info {
  position: absolute;
  right: 70rpx;
  top: 24rpx;
  display: flex;
  align-items: flex-start;
  background-color: rgba(255, 255, 255, 1);
  padding: 20rpx;
  box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  overflow: visible;
  margin-top: 0;
}

.product-address .dm-product-info::after {
  position: absolute;
  right: 50%;
  bottom: -10rpx;
  content: '';
  margin-right: -32rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #fff;
  z-index: 10;
}

.product-address .dm-product-title {
  flex: 1;
  position: relative;
  width: 316rpx;
  height: 92rpx;
  color: #404040;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-right: 0;
}

.product-address .dm-product-location {
  float: left;
  color: #999;
  text-align: center;
  margin-top: 12rpx;
  font-weight: 400;
}

.product-address .dm-product-place {
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.product-address .dm-product-location .dm-icon {
  float: left;
  margin-top: 8rpx;
  margin-right: 8rpx;
}

.product-address .dm-product-text {
  padding: 0 40rpx 40rpx;
  margin-top: 24rpx;
  overflow: hidden;
}

.product-address .dm-product-text text {
  float: left;
  margin-right: 24rpx;
}

.product-address .addrIcon {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
  width: 112rpx;
  height: 44rpx;
  text-indent: 40rpx;
  font-size: 24rpx;
  color: #404040;
  line-height: 44rpx;
  background: url("https://cdn.doumistatic.com/169,0151f097e69daf5a.png") no-repeat;
  background-size: 100% 100%;
}

.product-address .dm-box {
  position: relative;
  background-color: #fff;
  box-shadow: 0 2px 14px 0 rgba(0, 0, 0, 0.08);
  border-radius: 0 0 4px 4px;
  padding: 32rpx 24rpx;
  color: #808080;
  font-size: 24rpx;
  line-height: 40rpx;
}

.product-address .dm-box.active {
  margin-left: -40rpx;
  margin-right: -40rpx;
  padding: 32rpx 40rpx;
  box-shadow: none;
}

.product-address .dm-box.active::after {
  content: "";
  position: absolute;
  top: 0;
  right: 80rpx;
  left: 80rpx;
  height: 1px;
  border-top: 1px dotted #e5e5e5;
  transform-origin: 0 0;
  transform: scale3d(1, 0.5, 1);
}

.product-address .dm-box .product-time {
  margin-bottom: 16rpx;
}

.product-address .dm-box .text {
  color: #404040;
  font-size: 28rpx;
  line-height: 44rpx;
}

.product-address .product-time .time {
  margin-left: 20rpx;
  display: inline-block;
}

/* product-contacts */

.product-contacts {
  padding: 0 32rpx 32rpx;
  margin-top: 32rpx;
}

.product-contacts .dm-product-box {
  background-color: #fff;
  padding: 24rpx;
  box-shadow: 0 2px 14px 0 rgba(0, 0, 0, 0.08);
  border-radius: 4px;
}

.product-contacts .dm-product-box .title {
  color: #808080;
  font-size: 24rpx;
  line-height: 40rpx;
}

.product-contacts .dm-product-box .text {
  color: #404040;
  font-size: 28rpx;
  line-height: 44rpx;
}

.product-contacts .product-adviser {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-contacts .product-adviser-avatar {
  flex: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
}

.product-contacts .product-adviser-info {
  display: block;
  flex: 1;
  margin-right: 12px;
}

.product-contacts .product-adviser-btn {
  flex: 0;
  padding: 8rpx 24rpx;
  background-color: #fc0;
  border-radius: 2px;
  color: #404040;
  font-size: 28rpx;
  line-height: 44rpx;
  white-space: nowrap;
}

.product-contacts .product-work {
  margin-top: 16rpx;
}

/* product-matter */

.product-contacts + .product-matter {
  margin-top: -4px;
}

.product-matter .dm-matter-title {
  font-size: 36rpx;
  color: #404040;
  line-height: 52rpx;
  font-weight: 700;
}

.product-matter .dm-product-box {
  padding: 0 32rpx 32rpx;
}

.short-line {
  width: 54rpx;
  height: 6rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  background: #f7f7f7;
}

.product-matter .dm-product-item,
.product-matter .dm-product-text {
  color: #808080;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: justify;
  white-space: pre-line;
}
